<?xml version="1.0" encoding="UTF-8"?>
<jboss-deployment-structure xmlns="urn:jboss:deployment-structure:1.2">
    <deployment>
        <dependencies>
            <!-- Módulos do sistema -->
            <module name="org.slf4j" slot="main"/>
            <module name="org.apache.commons.logging" slot="main"/>
            
            <!-- Módulos JPA disponíveis no WildFly -->
            <module name="org.hibernate" slot="main"/>
            <module name="org.hibernate.validator" slot="main"/>
            
            <!-- Módulos Jakarta EE -->
            <module name="jakarta.persistence.api" slot="main"/>
            <module name="jakarta.transaction.api" slot="main"/>
            <module name="jakarta.validation.api" slot="main"/>
        </dependencies>
        
        <exclusions>
            <!-- Excluir módulos conflitantes se necessário -->
        </exclusions>
    </deployment>
</jboss-deployment-structure>
